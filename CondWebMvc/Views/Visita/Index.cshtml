@model IEnumerable<CondWebMvc.Models.ControleVisitas>
@{
    ViewData["Title"] = "Entrada de Visitantes";
}

<h2>@ViewData["Title"] </h2>
<hr />

<p>
    <a asp-action="Create" class="btn btn-success" data-toggle="modal" data-target="#modalIncluir">Novo</a>
</p>

<table class="table table-striped">
    <thead class="text-light bg-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeVisitante)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Documento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Unidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Obs)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeVisitante)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Documento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnidadeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Obs)
            </td>
            <td style="text-align: right">               
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info" data-toggle="modal" data-target="#modalDetalhar">Detalhar</a>
            </td>
        </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="modalIncluir" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
        </div>
    </div>
</div>

<div class="modal fade" id="modalDetalhar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
        </div>
    </div>
</div>