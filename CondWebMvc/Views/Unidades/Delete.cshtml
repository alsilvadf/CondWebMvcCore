@model CondWebMvc.Models.Unidade

@{
    ViewData["Title"] = "Excluir";
}


@{
    Layout = null;
}

<div class="container-fluid">
    <div class="modal-header">
        <h4 class="modal-title">Deseja Realmente excluir esse registro?</h4>
    </div>

    <div class="row">
        <div class="col-md-12">
            <form asp-action="Delete">
                <div class="form-group">
                    @Html.DisplayNameFor(model => model.NumUnidade):
                    @Html.DisplayFor(model => model.NumUnidade)
                </div>
                <div class="form-group">
                    @Html.DisplayNameFor(model => model.BlocoUnidade):
                    @Html.DisplayFor(model => model.BlocoUnidade)
                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Excluir" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-info">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>


