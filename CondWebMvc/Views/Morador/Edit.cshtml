@model CondWebMvc.Models.ViewModels.MoradorFormViewModels

@{
    Layout = null;
}
<div class="container-fluid">
    <div class="modal-header">
        <h4 class="modal-title">Editar Morador</h4>
    </div>

    <div class="row">
        <div class="col-md-12">
            <form asp-action="Edit">
                <input type="hidden" asp-for="Morador.Id" />
                <div class="form-group">
                    <label asp-for="Morador.NomeMorador" class="control-label"></label>
                    <input asp-for="Morador.NomeMorador" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Morador.TelefoneMorador" class="control-label"></label>
                    <input asp-for="Morador.TelefoneMorador" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Morador.EmailMorador" class="control-label"></label>
                    <input asp-for="Morador.EmailMorador" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Morador.UnidadeId" class="control-label"></label>
                    <select asp-for="Morador.UnidadeId" asp-items="@(new SelectList(Model.Unidades,"Id","NomeComBloco"))" class="form-control"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-success" />
                    <a asp-action="Index" class="btn btn-info">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


