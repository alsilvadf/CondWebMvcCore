@model IEnumerable<CondWebMvc.Models.Morador>

@{
    ViewData["Title"] = "Moradores";
}

    <h2>@ViewData["Title"] </h2>
<hr />
<p>
    <a asp-action="Create" class="btn btn-success" data-toggle="modal" data-target="#modalCreate">Novo</a>
</p>
    <table class="table table-striped">
        <thead class="text-light bg-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NomeMorador)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TelefoneMorador)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmailMorador)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UnidadeId)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeMorador)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TelefoneMorador)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailMorador)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnidadeId)                 
                </td>
                <td style="text-align: right">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning" data-toggle="modal" data-target="#modalEditar">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info" data-toggle="modal" data-target="#modalDetalhar">Detalhar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" data-toggle="modal" data-target="#modalDeletar">Deletar</a>

                </td>
            </tr>
            }
        </tbody>
    </table>

    <div class="modal fade" id="modalEditar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
            </div>
        </div>
    </div>

    <div class="modal fade" id="modalCreate" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
            </div>
        </div>
    </div>

    <div class="modal fade" id="modalDetalhar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
            </div>
        </div>
    </div>

    <div class="modal fade" id="modalDeletar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
            </div>
        </div>
    </div>
